{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "outDir": "./build", // Dossier de sortie
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true, // Gardez cette option
    "isolatedModules": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true, // Gardez composite Ã  true
    "emitDeclarationOnly": true // Remplacez noEmit par emitDeclarationOnly
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/declarations.d.ts"]
}
